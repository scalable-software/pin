{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "baseUrl": "./",
    "paths": {
      "@scalable.software/pin": ["./src/index.js"]
    },
    "declaration": false
  },
  "include": [
    "./src/**/*",
    "./test/unit/**/*",
    "./test/helper/helper.d.ts",
    "./test/helper/helper.js"
  ],
  "exclude": ["node_modules", "dist", "tasks"],
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"],
    "excludePrivate": true,
    "excludeProtected": true,
    "disableSources": true,
    "categorizeByGroup": false,
    "sort": ["static-first", "visibility"],
    "name": "Web Component",
    "plugin": ["typedoc-plugin-merge-modules"],
    "mergeModulesMergeMode": "module",
    "hideGenerator": true
  }
}
